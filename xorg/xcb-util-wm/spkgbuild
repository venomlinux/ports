# description	:  libraries for XC Binding - client and window-manager helpers for ICCCM
# homepage	: http://xcb.freedesktop.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: libxcb util-macros

name=xcb-util-wm
version=0.4.1
release=1
source=(http://xcb.freedesktop.org/dist/xcb-util-wm-$version.tar.bz2)

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

md5sum=(87b19a1cd7bfcb65a24e36c300e03129)
