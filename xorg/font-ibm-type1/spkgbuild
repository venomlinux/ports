# description	: X.org Type1 fonts
# homepage	: http://xorg.freedesktop.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: encodings font-alias fontconfig

name=font-ibm-type1
version=1.0.3
release=1
source=(http://ftp.x.org/pub/individual/font/font-ibm-type1-$version.tar.bz2)

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
	
	find $PKG -name 'fonts.dir' -delete
	find $PKG -name 'fonts.scale' -delete
}

