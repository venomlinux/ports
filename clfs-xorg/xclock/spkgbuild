# description	: Simple clock application which is used in the default xinit configuration
# homepage	: http://xorg.freedesktop.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: libx11 libxaw libxft libxkbfile libxmu libxrender
# makedepends	: util-macros

name=xclock
version=1.0.7
release=1
source=(http://ftp.x.org/pub/individual/app/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}