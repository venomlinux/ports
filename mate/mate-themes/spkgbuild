# description	: MATE themes
# depends	: gtk2

name=mate-themes
version=3.22.9
release=1
source=(http://pub.mate-desktop.org/releases/themes/${version:0:4}/$name-$version.tar.xz)
md5sum=(ac8e0b21196fec1aacbf07962f49f02d)

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
