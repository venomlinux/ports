# description	: programs for controlling the startup, running, and shutdown of the system

name=sysvinit
version=3.05
release=1
source="https://github.com/slicer69/sysvinit/releases/download/$version/$name-$version.tar.xz"

build() {
	cd $name-$version

	find man -type d -name '??' -exec rm -r {} +

	make
	make ROOT=$PKG install


	# Provided by util-linux
	for utlx in last lastb mesg utmpdump wall; do
		rm $PKG/usr/share/man/man1/$utlx.1
	done

	# Provided by procps
	rm $PKG/bin/pidof
	rm $PKG/usr/share/man/man8/pidof.8

	# Provided by e2fsprogs
	rm $PKG/sbin/logsave
	rm $PKG/usr/share/man/man8/logsave.8
}
