# description	: Utility to control/monitor storage systems using the Self-Monitoring, Analysis and Reporting Technology System
# homepage	: http://smartmontools.sourceforge.net/
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com

name=smartmontools
version=6.6
release=4
source=(http://sourceforge.net/projects/$name/files/$name/$version/$name-$version.tar.gz
	https://raw.githubusercontent.com/emmett1/rc-init/master/rc.d/rc.smartd)

build() {
	cd $name-$version

  	./configure --prefix=/usr           \
	            --sysconfdir=/etc       \
	            --with-initscriptdir=no
	make
	make DESTDIR=$PKG install

	# daemon files
	install -Dm644 $SRC/rc.smartd $PKG/etc/rc.d/rc.smartd
}

