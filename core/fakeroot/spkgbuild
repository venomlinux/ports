# description	: Tool for simulating superuser privileges

name=fakeroot
version=1.25.3
release=1
source="http://ftp.debian.org/debian/pool/main/f/$name/${name}_${version}.orig.tar.gz"

build() {
	cd $name-$version

	sed -i '/^SUBDIRS/d' doc/Makefile.am

	./bootstrap
	./configure \
		--prefix=/usr \
		--disable-static \
		--with-ipc=sysv
	make
	make DESTDIR=$PKG install
}
