# description	: Library for manipulating Unicode strings and C strings
# depends	: glibc

name=libunistring
version=0.9.9
release=1
source=(https://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr    \
	            --disable-static
	make
	make DESTDIR=$PKG install
}
