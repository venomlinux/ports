#!/bin/sh
#
# /etc/rc.d/acpid: start/stop acpid daemon
#

. /etc/rc.subr

NAME="ACPI event daemon"
PROG=/usr/sbin/acpid
PIDFILE=/run/acpid.pid

case $1 in
	start)
		msg "Starting $NAME..."
		start_daemon $PROG
		eval_stat
		;;
	stop)
		msg "Stopping $NAME..."
		stop_daemon $PROG
		eval_stat
		;;
	restart)
		$0 stop
		sleep 1
		$0 start
		;;
	status)
		status_daemon $PROG
		;;
	*)
		echo "usage: $0 [start|stop|restart|status]"
		;;
esac

# End of file
