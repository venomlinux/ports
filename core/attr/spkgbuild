# description	: Utilities to administer the extended attributes on filesystem objects
# homepage	: http://savannah.nongnu.org/projects/attr
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: glibc

name=attr
version=2.4.48
release=1
source=(https://download.savannah.gnu.org/releases/$name/$name-$version.src.tar.gz)

build() {
	cd $name-$version

	sed -i -e "/SUBDIRS/s|man[25]||g" man/Makefile
	sed -i 's:{(:\\{(:' test/run

	./configure --prefix=/usr \
	            --bindir=/bin \
	            --disable-static
				--sysconfdir=/etc \
	make
	make DIST_ROOT=$PKG install

	mv -v /usr/lib/libattr.so.* /lib
	ln -sfv ../../lib/$(readlink $PKG/usr/lib/libattr.so) $PKG/usr/lib/libattr.so
}

md5sum=(bc1e5cb5c96d99b24886f1f527d3bb3d)
