# description	: A collection of routines used to create PNG format graphics files
# homepage	: http://www.libpng.org/pub/png/libpng.html
# maintainer	: emmett1, emmett1.2miligrams at gmail.com

name=libpng
version=1.6.35
release=1
source=(https://downloads.sourceforge.net/$name/$name-$version.tar.xz
	https://downloads.sourceforge.net/project/apng/libpng/libpng16/$name-$version-apng.patch.gz)
md5sum=(678b7e696a62a193ed3503b04bf449d6
	d0b3a2abd445d6091e5547066fc611a3)

build() {
	cd $name-$version

  	gzip -cd $SRC/$name-$version-apng.patch.gz | patch -p0

	LIBS=-lpthread ./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install

	mkdir -p $PKG/usr/share/doc/$name
	cp -v README libpng-manual.txt $PKG/usr/share/doc/$name
}
