# description	: Collection of modular and reusable compiler and toolchain technologies
# depends	: cmake libffi python2

name=llvm
version=6.0.1
release=1
source=(http://llvm.org/releases/$version/$name-$version.src.tar.xz
	http://llvm.org/releases/$version/cfe-$version.src.tar.xz
	http://llvm.org/releases/$version/compiler-rt-$version.src.tar.xz)
md5sum=(c88c98709300ce2c285391f387fecce0
	4e419bd4e3b55aa06d872320f754bd85
	99bf8bcb68ba96dda74f6aee6c55f639)

build() {
	cd $name-$version.src

	export CC=gcc
	export CXX=g++

	mv ../cfe-$version.src tools/clang
	mv ../compiler-rt-$version.src projects/compiler-rt

	mkdir -v build
	cd       build
	
	cmake .. -G Ninja \
	      -DCMAKE_INSTALL_PREFIX=/usr           \
	      -DLLVM_ENABLE_FFI=ON                  \
	      -DCMAKE_BUILD_TYPE=Release            \
	      -DLLVM_BUILD_LLVM_DYLIB=ON            \
      	      -DLLVM_LINK_LLVM_DYLIB=ON             \
	      -DLLVM_TARGETS_TO_BUILD="X86;AMDGPU" \
	      -Wno-dev
	ninja
	DESTDIR=$PKG ninja install
}
