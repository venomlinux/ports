# depends	: glibc ncurses

name=less
version=530
release=1
source=(http://www.greenwoodsoftware.com/$name/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr --sysconfdir=/etc
	make
	make DESTDIR=$PKG install
}
