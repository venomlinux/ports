# description	: Utilities for handling file systems, consoles, partitions, and messages
# depends	: coreutils shadow

name=util-linux
version=2.33.1
release=1
source=(https://www.kernel.org/pub/linux/utils/$name/v${version::4}/$name-$version.tar.xz)
md5sum=(6fcfea2043b5ac188fd3eed56aeb5d90)

build() {
	cd $name-$version

	mkdir -pv $PKG/var/lib/hwclock

	./configure ADJTIME_PATH=/var/lib/hwclock/adjtime   \
	            --disable-chfn-chsh  \
	            --disable-login      \
	            --disable-nologin    \
	            --disable-su         \
	            --disable-setpriv    \
	            --disable-runuser    \
	            --disable-pylibmount \
	            --disable-static     \
	            --without-python     \
	            --without-systemd    \
	            --without-systemdsystemunitdir
	make
	make DESTDIR=$PKG install
}
