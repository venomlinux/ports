# description	: Utilities for handling file systems, consoles, partitions, and messages
# depends	: pcre2 ncurses zlib readline eudev

name=util-linux
version=2.36
release=1

case $version in
	*.*.*) _ver=${version%.*};;
	*.*) _ver=$version;;
esac

source="https://www.kernel.org/pub/linux/utils/$name/v$_ver/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir -pv $PKG/var/lib/hwclock

	./configure ADJTIME_PATH=/var/lib/hwclock/adjtime   \
	            --disable-chfn-chsh  \
	            --disable-login      \
	            --disable-nologin    \
	            --disable-su         \
	            --disable-setpriv    \
	            --disable-runuser    \
	            --disable-pylibmount \
	            --disable-static     \
	            --without-python     \
	            --without-systemd    \
		    --disable-nls        \
	            --without-systemdsystemunitdir
	make
	make DESTDIR=$PKG install
}
