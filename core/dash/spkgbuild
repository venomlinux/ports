# description	: POSIX compliant shell

name=dash
version=0.5.11.3
release=1
source="http://gondor.apana.org.au/~herbert/dash/files/$name-$version.tar.gz"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--bindir=/bin \
		--mandir=/usr/share/man \
		--with-libedit
	make
	make DESTDIR=$PKG install
}
