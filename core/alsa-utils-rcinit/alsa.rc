#!/bin/sh
#
# /etc/rc.d/alsa: store/restore ALSA mixer levels
#

# location of the alsactl executable
ALSACTL=/usr/sbin/alsactl

case $1 in
	start)
		echo "Restoring ALSA volume state..."
		$ALSACTL restore
		;;
	stop)
		echo "Saving ALSA volume state..."
		$ALSACTL store
		;;
	restart)
		$0 stop
		sleep 2
		$0 start
		;;
	*)
		echo "Usage: $0 [start|stop|restart]"
		;;
esac

exit 0

# End of file
