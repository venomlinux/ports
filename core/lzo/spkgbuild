# description	: Data compression library

name=lzo
version=2.10
release=1
source=(http://www.oberhumer.com/opensource/lzo/download/lzo-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr                    \
	            --enable-shared                  \
	            --disable-static
	make
	make DESTDIR=$PKG install
}

md5sum=(39d3f3f9c55c87b1e5d6888e1420f4b5)
