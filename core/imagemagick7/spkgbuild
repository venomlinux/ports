# description	: ImageMagick is a collection of tools and libraries to read, write, and manipulate an image in various image formats
# homepage	: http://www.imagemagick.org
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# depends	: fontconfig lcms2 libtool libxext libxt perl
# makedepends	: libxml2 librsvg

name=imagemagick7
version=7.0.6.10
release=1
source=(ftp://ftp.imagemagick.org/pub/ImageMagick/releases/ImageMagick-${version%.*}-${version##*.}.tar.xz)

build() {
	cd ImageMagick-${version%.*}-${version##*.}
	
	./configure --prefix=/usr     \
	            --sysconfdir=/etc \
	            --enable-hdri     \
	            --with-modules    \
	            --with-perl       \
	            --disable-static
	make
	make DESTDIR=$PKG install

	find $PKG -name perllocal.pod -exec rm {} \;

}

