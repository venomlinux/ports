# description	: Mixer library for MATE Desktop
# depends	: glib alsa-lib

name=libmatemixer
version=1.24.1
release=1
source="https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-nls
	make
	make DESTDIR=$PKG install
}
