# description	: X11 client-side library
# depends	: libxcb xtrans

name=libx11
version=1.6.10
release=1
source="http://ftp.x.org/pub/individual/lib/libX11-$version.tar.bz2"

build() {
	cd libX11-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}
