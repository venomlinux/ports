# description	: Management tools and libraries relating to cryptography

name=openssl
version=1.1.1
release=1
source=(https://openssl.org/source/$name-$version.tar.gz)
md5sum=(7079eb017429e0ffb9efb42bf80ccb21)

build() {
	cd $name-$version

  	./config --prefix=/usr         \
	         --openssldir=/etc/ssl \
	         --libdir=lib          \
	         shared                \
	         zlib-dynamic
	make

	# disable static lib
	sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile

	make DESTDIR=$PKG MANDIR=/usr/share/man MANSUFFIX=ssl install
}
