# description	: qt5 wrapper for poppler
# depends	: poppler qt5 ninja

name=poppler-qt5
version=23.12.0
release=1
source="https://poppler.freedesktop.org/poppler-$version.tar.xz"

build() {
	cmake -S poppler-$version -B build -G Ninja \
	        -DCMAKE_INSTALL_PREFIX=/usr \
	        -DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_LIBEXECDIR=lib \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_C_FLAGS_RELEASE="$CFLAGS" \
		-DCMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
		-DTESTDATADIR=$PWD/testfiles \
		-DENABLE_UNSTABLE_API_ABI_HEADERS=OFF \
		-DENABLE_UTILS=OFF \
		-DENABLE_CPP=OFF \
		-DENABLE_GLIB=OFF \
		-DENABLE_QT5=ON \
		-DENABLE_QT6=OFF \
		-DENABLE_BOOST=OFF \
		-Wno-dev 
	cmake --build build
	DESTDIR=$PKG cmake --install build

	rm $PKG/usr/lib/libpoppler.so*
	rm $PKG/usr/lib/pkgconfig/poppler.pc
	#rm $PKG/usr/lib/pkgconfig/poppler-splash.pc
	#rm $PKG/usr/lib/pkgconfig/poppler-cairo.pc
}
