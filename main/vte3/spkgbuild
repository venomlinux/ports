# description	: Termcap file implementation for terminal emulators
# depends	: gobject-introspection vala glib pango fribidi gnutls pcre2 zlib gtk3 atk cairo gdk-pixbuf

name=vte3
version=0.68.0
release=1
source="https://ftp.gnome.org/pub/gnome/sources/vte/${version%.*}/vte-$version.tar.xz
	fix-W_EXITCODE.patch"

build() {
	cd vte-$version

	patch -Np0 -i $SRC/fix-W_EXITCODE.patch

	mkdir build
        cd    build

        meson --prefix=/usr \
	      --libexecdir=lib \
	      -D_systemd=false
        ninja
        DESTDIR=$PKG ninja install

}
