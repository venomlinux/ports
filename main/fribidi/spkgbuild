# description	: Implementation of the Unicode Bidirectional Algorithm (BIDI)
# depends	: glib meson

name=fribidi
version=1.0.11
release=1
source="https://github.com/fribidi/fribidi/releases/download/v$version/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr ..
	ninja
	DESTDIR=$PKG ninja install
}
