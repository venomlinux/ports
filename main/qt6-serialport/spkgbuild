# description	    : Provides access to hardware and virtual serial ports
# homepage	    : https://www.qt.io/
# depends	    : qt6-base

name=qt6-serialport
version=6.3.1
release=1
source="https://download.qt.io/official_releases/qt/${version%.*}/$version/submodules/qtserialport-everywhere-src-$version.tar.xz"

build() {

	cmake -S qtserialport-everywhere-src-$version -B build -G Ninja \
		-D QT_USE_CCACHE=ON \
		-D INSTALL_PUBLICBINDIR=usr/bin \
		-D CMAKE_BUILD_TYPE=Release \
		-D CMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
		-D CMAKE_C_FLAGS_RELEASE="$CFLAGS"
	cmake --build build
	DESTDIR=$PKG cmake --install build
}
