# description	    : LXQt about dialog.
# homepage	    : https://lxqt.github.io
# depends	    : liblxqt

name=lxqt-about
version=1.2.0
release=1
source="https://github.com/lxqt/$name/archive/$version/$name-$version.tar.gz"

build() {
	cmake $name-$version \
		-DCMAKE_INSTALL_PREFIX=/usr 

	make && make DESTDIR=$PKG install
}

