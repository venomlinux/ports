# description	: The configuration storage system for Xfce
# depends	: dbus-glib libxfce4util

name=xfconf
version=4.18.3
release=1
source="http://archive.xfce.org/src/xfce/$name/${version%.*}/$name-$version.tar.bz2"

build() {
	cd $name-$version

	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install

}
