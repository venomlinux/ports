# description	: C library that allows cryptography support to be added to a program
# depends	: libassuan

name=gpgme
version=1.16.0
release=1
source="ftp://ftp.gnupg.org/gcrypt/gpgme/$name-$version.tar.bz2"

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-gpg-test
	make
	make DESTDIR=$PKG install


}
