# description	: Fast and lightweight IDE
# homepage	: https://www.geany.org
# depends	: gtk3 hicolor-icon-theme desktop-file-utils intltool

name=geany
version=2.0
release=1
source="http://download.geany.org/$name-$version.tar.bz2"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--enable-plugins \
		--enable-gtk3
	make
	make DESTDIR=$PKG install
}
