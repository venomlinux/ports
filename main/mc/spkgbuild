# description	: A Text-mode full-screen file manager and visual shell
# depends	: glib pcre slang

name=mc
version=4.8.28
release=1
source="http://ftp.midnight-commander.org/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure --prefix=/usr \
	            --sysconfdir=/etc \
	            --libexecdir=/usr/lib \
	            --enable-charset
	make
	make DESTDIR=$PKG install
}
