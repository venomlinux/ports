# description : lilv library to make use of lv2 plugins as simple as possible 
# depends	 : sratom lv2 serd sord sratom

name=lilv
version=0.24.14
release=1
source="https://download.drobilla.net/$name-$version.tar.bz2"

build() {
	cd $name-$version
	/usr/bin/python3 waf configure --prefix=/usr
	/usr/bin/python3 waf  build
	/usr/bin/python3 waf install --destdir=$PKG
	rm -r $PKG/usr/etc
}
