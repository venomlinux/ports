# description	: MATE document viewer
# depends	: gtk3 libsecret caja poppler-glib zlib libtiff libsm libice libx11 gtk-doc yelp-tools python3-libxml2

name=atril
version=1.26.0
release=1
source="https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/$name \
		--disable-synctex
	make
	make DESTDIR=$PKG install
}
