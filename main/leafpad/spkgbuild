# description	: A notepad clone for GTK+ 2.0
# depends	: gtk2 intltool

name=leafpad
version=0.8.19
release=1
source="http://savannah.nongnu.org/download/$name/$name-$version.tar.gz"

build() {
	cd $name-$version
	./configure --prefix=/usr \
		    --enable-chooser
	make
	make DESTDIR=$PKG install

}
