# description	: Create an index of scalable font files for X
# depends	: libfontenc freetype2 zlib 

name=mkfontscale
version=1.2.2
release=1
source="http://ftp.x.org/pub/individual/app/mkfontscale-$version.tar.xz"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
