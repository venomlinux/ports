# description	: International Components for Unicode library
# homepage	: https://github.com/unicode-org/icu

name=icu
version=71.1
release=1
source="$name-$version.tgz::https://github.com/unicode-org/$name/releases/download/release-${version%.*}-1/icu4c-${version%.*}_1-src.tgz"

build() {
	cd $name/source

	# icu tries to use clang by default
	[ "$CC" ] || export CC=gcc
	[ "$CXX" ] || export CXX=g++

	./configure \
		--prefix=/usr \
		--disable-samples \
		--disable-tests
	make
	make DESTDIR=$PKG install
}
