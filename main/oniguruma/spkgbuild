# description	: a regular expressions library

name=oniguruma
version=6.9.9
release=1
source="https://github.com/kkos/oniguruma/releases/download/v$version/onig-$version.tar.gz"

build() {
	case $version in
		*.*.*.*) version=${version%.*};;
	esac
	cd onig-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
