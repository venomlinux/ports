# description	: X11 Video extension library
# depends	: libx11 libxext 

name=libxv
version=1.0.12
release=1
source="$name-$version.tar.xz::http://ftp.x.org/pub/individual/lib/libXv-$version.tar.xz"

build() {
	cd libXv-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}
