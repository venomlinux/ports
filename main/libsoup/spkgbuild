# description	: HTTP client/server library for GNOME
# depends	: glib-networking libxml2 sqlite gobject-introspection vala meson libpsl libnghttp2

name=libsoup
version=3.0.6
release=1
source="https://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	venom-meson \
	-Dgssapi=disabled \
	-Dvapi=enabled \
	-Dbrotli=disabled \
	-Dsysprof=disabled \
	build
	meson compile -C build
	DESTDIR=$PKG meson install -C build
}
