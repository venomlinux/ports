# description	: Library which provides a simple foundation for reading DVDs

name=libdvdread
version=6.1.3
release=1
source="https://download.videolan.org/videolan/$name/$version/$name-$version.tar.bz2"

build() {
	cd $name-$version

	./configure --prefix=/usr    \
	            --disable-static
	make
	make DESTDIR=$PKG install

}
