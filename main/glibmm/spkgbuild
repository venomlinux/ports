# description	: Set of C++ bindings for GLib
# depends	: glib libsigc++3 meson

name=glibmm
version=2.72.1
release=1
source="https://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	meson setup build \
	    --prefix=/usr \
	    --buildtype=plain
	meson compile -C build
	DESTDIR=$PKG meson install -C build
}
