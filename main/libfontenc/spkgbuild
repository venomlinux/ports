# description	: X11 font encoding library
# depends	: zlib font-util xorgproto

name=libfontenc
version=1.1.7
release=1
source="http://ftp.x.org/pub/individual/lib/$name-$version.tar.xz"

build() {
	cd libfontenc-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}
