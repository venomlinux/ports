# description	    : Static and runtime integration of SCXML models into Qt6 code
# homepage	    : https://www.qt.io/
# depends	    : qt6-declarative

name=qt6-scxml
version=6.3.1
release=1
source="https://download.qt.io/official_releases/qt/${version%.*}/$version/submodules/qtscxml-everywhere-src-$version.tar.xz"

build() {

    
	cmake -S qtscxml-everywhere-src-$version -B build -G Ninja \
		-D QT_USE_CCACHE=ON \
		-D CMAKE_BUILD_TYPE=Release \
		-D CMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
		-D CMAKE_C_FLAGS_RELEASE="$CFLAGS"
	cmake --build build
	DESTDIR=$PKG cmake --install build
}
