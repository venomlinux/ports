# description	: Programs for dynamic creation of device nodes
# depends	: util-linux kmod libxslt

name=eudev
version=3.2.11
release=1
source="$name-$version.tar.gz::https://github.com/eudev-project/eudev/archive/v$version.tar.gz"

build() {
	cd $name-$version
	NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr           \
	            --bindir=/sbin          \
	            --sbindir=/sbin         \
	            --libdir=/usr/lib       \
	            --sysconfdir=/etc       \
	            --libexecdir=/lib       \
	            --with-rootprefix=      \
	            --with-rootlibdir=/lib  \
	            --enable-manpages       \
	            --disable-static
	make

	mkdir -pv $PKG/lib/udev/rules.d
	mkdir -pv $PKG/etc/udev/rules.d

	make DESTDIR=$PKG install
}
