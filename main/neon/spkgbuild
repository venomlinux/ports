# description	: HTTP and WebDAV client library, with a C interface
# depends	: openssl xmlto

name=neon
version=0.32.5
release=1
source="https://fossies.org/linux/www/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --with-ssl \
	            --enable-shared \
	            --disable-static \
		    --disable-nls
	make
	make DESTDIR=$PKG install

}
