# description	:  Strawberry is a music player and music collection organizer.
# homepage	: https://www.strawberrymusicplayer.org/
# depends	: cmake make gcc boost glib protobuf qt6-base qt6-tools sqlite alsa-lib dbus gstreamer gnutls taglib fftw pulseaudio libcdio libmtp 

name=strawberry
version=1.0.9
release=2
source="https://files.strawberrymusicplayer.org/$name-$version.tar.xz"

build() {
	cd $name-$version
	mkdir build 
	cmake -B build  \
			-DCMAKE_INSTALL_PREFIX=/usr \
			-DBUILD_WITH_QT6=on \
			-DENABLE_VLC=off
	cmake --build build
	DESTDIR=$PKG cmake --install build
}
