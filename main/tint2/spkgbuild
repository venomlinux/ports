# description	: Basic, good-looking task manager for WMs
# depends	: gtk2 imlib2 startup-notification cmake ninja libxdamage libxcomposite librsvg

name=tint2
version=17.0.2
release=1
source="https://gitlab.com/o9000/tint2/-/archive/v$version/tint2-v$version.tar.gz"

build() {
	mkdir -p build
	cd build
	cmake "../tint2-v$version" \
	   -DCMAKE_INSTALL_PREFIX=/usr \
	   -DENABLE_TINT2CONF=1 \
	   -GNinja
	ninja
	DESTDIR="$PKG" ninja install

}
