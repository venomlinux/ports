# description	: Qt/C++ wrapper over minizip 
# depends	: cmake icu qt5

name=quazip
version=1.2
release=1
source="https://github.com/stachenov/$name/archive/v$version.tar.gz"

build() {
	cd $name-$version
	mkdir -p build
	cd build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
	..
	make
	make DESTDIR=$PKG install
}
