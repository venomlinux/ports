# description	: X11 Resource extension library
# depends	: libx11 libxext 

name=libxres
version=1.2.2
release=1
source="$name-$version.tar.xz::http://ftp.x.org/pub/individual/lib/libXres-$version.tar.xz"

build() {
	cd libXres-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

