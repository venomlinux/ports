# description	: GNOME Docking Library
# depends	: libxml2 gtk3

name=gdl
version=3.40.0
release=1
source="https://download.gnome.org/sources/gdl/${version%.*}/$name-$version.tar.xz 0001-fix-missing-include.patch"

build() {
	cd $name-$version
	patch -Np1 -i $SRC/*.patch

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install

}
