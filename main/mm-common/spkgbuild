# description	: Common build files of the C++ bindings. 
# homepage	: https://gtkmm.org/
# depends	: meson ninja

name=mm-common
version=1.0.4
release=1
source="https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version

  venom-meson build
  meson compile -C build
  meson install -C build --destdir "$PKG"	

}
