# description : sord lihgtweight C library for sorting RDF statements in memory 
# depends	 : serd

name=sord
version=0.16.12
release=1
source="https://download.drobilla.net/$name-$version.tar.xz"

build() {
	cd $name-$version
	mkdir build
	cd build
	venom-meson \
	 ..
	
	ninja
	DESTDIR=$PKG ninja install
}
