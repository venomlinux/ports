# description	: Contains libraries and utilities used for parsing XML files
# depends	: icu

name=libxml2
version=2.10.2
release=1
source="https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version

	./configure --prefix=/usr \
		    --disable-static \
		    --with-history \
		    --with-icu \
		    --without-python
	make
	make DESTDIR=$PKG install

}
