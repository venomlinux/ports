# description	: X11 font rasterisation library
# depends	: xorgproto freetype2 libfontenc util-macros xtrans

name=libxfont
version=1.5.4
release=1
source="$name-$version.tar.bz2::https://www.x.org/pub/individual/lib/libXfont-$version.tar.bz2"

build() {
	cd libXfont-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static \
		--disable-devel-docs
	make
	make DESTDIR=$PKG install
}
