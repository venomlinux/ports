# description	: Meta port for xfce4 desktop
# homepage	: http://www.xfce.org/
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com

depends=(libxfce4util xfconf libxfce4ui exo garcon gtk-xfce-engine libwnck2
	xfce4-panel thunar tumbler xfce4-appfinder xfce4-power-manager xfce4-settings
	xfdesktop xfwm4 xfce4-session mousepad xfce4-terminal xfce4-notifyd parole ristretto xfburn)

name=xfce4-meta
version=1.0
release=2
source=(xinitrc.xfce4)

build() {
	install -Dm644 $SRC/xinitrc.xfce4 $PKG/etc/X11/app-defaults/xinitrc.xfce4
}
