# description	: The GL Vendor-Neutral Dispatch library
# depends	: libxext-32

name=libglvnd-32
version=1.2.0
release=1
source=(libglvnd-$version.tar.gz::https://github.com/NVIDIA/libglvnd/archive/v$version.tar.gz)
md5sum=(8182fa21dd2e2d1110ec303477094564)

build() {
	cd libglvnd-$version

	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig:/usr/share/pkgconfig"

	./autogen.sh
	./configure --prefix=/usr \
		--build=i686-unknown-linux-gnu \
		--libdir=/usr/lib32 \
		--disable-headers
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/include
}
