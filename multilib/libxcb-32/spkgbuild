# description	: X11 client-side library (32bit)
# depends	: libxcb libxau-32 xcb-proto-32

name=libxcb-32
version=1.16
release=1
source="http://xcb.freedesktop.org/dist/${name%-*}-$version.tar.xz"

build() {
	cd libxcb-$version

	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_LIBDIR="/usr/lib32/pkgconfig"
	
	# removes dependency on libpthread-stubs package which is useless on Linux
	sed -i "s/pthread-stubs//" configure

	./configure \
		--prefix=/usr \
		--libdir=/usr/lib32 \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static     \
		--without-doxygen \
		--docdir='${datadir}'/doc/libxcb
	make
	make DESTDIR=$PWD/DESTDIR install
	mkdir -p $PKG/usr/lib32
	cp -Rv DESTDIR/usr/lib32/* $PKG/usr/lib32
}
