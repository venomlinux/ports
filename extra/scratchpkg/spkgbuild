# description	: A simple package manager for Linux From Scratch
# backup	: etc/scratchpkg.conf etc/scratchpkg.repo
# depends	: coreutils bash wget httpup

name=scratchpkg
version=20180815
release=1
_commit=5e78a0d5a5a5e596b7c86b13872d5a9034c7c9f7
source=($name-$_commit.tar.gz::https://github.com/emmett1/scratchpkg/archive/$_commit.tar.gz)
md5sum=(f6f42847da2b7af8b5e99f942d6dafec)

build() {
	cd $name-$_commit
	DESTDIR=$PKG ./INSTALL.sh
}
