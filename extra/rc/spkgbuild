# description	: BSD-style init (CRUX's init inspired)
# backup	: etc/rc.conf etc/rc.local
# depends	: sysvinit

name=rc
version=20180811
release=1
options=(!strip)
_commit=b07f5a8f60a5571340e73aaf572f80eaf56253c1
source=($name-$_commit.tar.gz::https://github.com/emmett1/rc/archive/$_commit.tar.gz)
md5sum=(29981873fa854364d969be555a7c6f13)

build() {
	cd $name-$_commit
	make DESTDIR=$PKG install
	#chmod -x $PKG/etc/rc.d/template
}
