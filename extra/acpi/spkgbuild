# description	: Client for battery, power, and thermal readings
# depends	: glibc

name=acpi
version=1.7
release=1
source=(https://downloads.sourceforge.net/sourceforge/acpiclient/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}

md5sum=(b52ce4ca39bbf7000a1c2de8879f1dcb)
