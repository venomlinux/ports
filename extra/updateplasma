#!/bin/bash -e

KF5VER=5.18.4

PKG=$(grep -R download.kde.org/stable/plasma . | cut -d / -f2)

for pkg in ${PKG[@]}
do
  [ -d $pkg ] || continue
  pushd $pkg >/dev/null
	echo "Update $pkg..."
    sed -i "s#version=.*#version=${KF5VER}#g" spkgbuild
    sed -i "s#release=.*#release=1#g" spkgbuild
    fakeroot pkgbuild -o
    fakeroot pkgbuild -g
    fakeroot pkgbuild -p
  popd >/dev/null
done
