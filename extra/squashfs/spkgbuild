# description	: Squashfs is a compressed read-only filesystem for Linux.
# backup	: 
# conflict	:
#maintainer	: daemonbsd56
# depends	: zlib lzo xz lz4
# makedepends	: 
# noextract	: 

name=squashfs
version=4.3
release=1
options=()
source=(http://downloads.sourceforge.net/sourceforge/$name/$name$version.tar.gz)

build() {
	cd $name$version/squashfs-tools/
	
	make XZ_SUPPORT=1 LZO_SUPPORT=1 LZMA_XZ_SUPPORT=1 LZA_SUPPORT=1
	mkdir -p $PKG/bin
	make DESTDIR=$PKG/bin install
}
