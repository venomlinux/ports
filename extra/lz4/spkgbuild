# description	: Extremely fast compression algorithm
# depends	: glibc

name=lz4
version=1.8.3
release=1
source=($name-$version.tar.gz::https://github.com/lz4/lz4/archive/v$version.tar.gz)
md5sum=(d5ce78f7b1b76002bbfffa6f78a5fc4e)

build() {
	cd $name-$version
	make PREFIX=/usr
	make DESTDIR=$PKG PREFIX=/usr install
}

