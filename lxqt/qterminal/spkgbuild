# description	: A lightweight Qt-based terminal emulator
# depends	: qt5 cmake qtermwidget

name=qterminal
version=0.14.1
release=1
source=(https://downloads.lxqt.org/downloads/qterminal/$version/qterminal-$version.tar.xz)
md5sum=(8b2e83a5a0daf8cd9a1b770f9e719a7d)

build() {
	cd $name-$version
	mkdir -p build
	cd build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
	..
	make
	make DESTDIR=$PKG install
}
