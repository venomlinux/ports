# description	: The LXQt desktop panel
# depends	: qt5 cmake libstatgrab libsysstat lm_sensors liblxqt kwindowsystem libqtxdg solid lxqt-globalkeys pulseaudio libdbusmenu-qt

name=lxqt-panel
version=0.14.1
release=1
source=(https://downloads.lxqt.org/downloads/lxqt-panel/$version/lxqt-panel-$version.tar.xz)
md5sum=(ddf2ddcb20b508827ff2740f162b7e5c)

build() {
	cd $name-$version
	mkdir -p build
	cd build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
	..
	make
	make DESTDIR=$PKG install
}
