# description	: KF5 archive tool
# depends	: kparts kpty libarchive kitemmodels hicolor-icon-theme extra-cmake-modules kdoctools python3

name=ark
version=19.04.0
release=1
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version
	
	mkdir build
	cd    build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
	      -DCMAKE_BUILD_TYPE=Release         \
	      -DBUILD_TESTING=OFF                \
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/doc
	rm -r $PKG/usr/share/locale
	rm -r $PKG/usr/share/man/{ca,uk,nl,pt_BR,fr,de,sr,it,es,pt,gl,sv}
}

md5sum=(4f198738bf03b050d4d16d82cb27f5e9)
