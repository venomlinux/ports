# description	: Core components for the KDE's Activities
# depends	: kcoreaddons kconfig kwindowsystem qt5 extra-cmake-modules boost python3

name=kactivities
version=5.57.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(a17a913ae89cdf8b959ed49b1a97512e)
