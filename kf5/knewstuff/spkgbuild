# description	: Support for downloading application assets from the network
# depends	: kio extra-cmake-modules python3 qt5

name=knewstuff
version=5.53.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	export CXXFLAGS="${CXXFLAGS} -isystem /usr/include/openssl-1.0"

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(f9b94bfbfc7658ff675c6f81085172f7)
