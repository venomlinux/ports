# description	: Qt-style Client and Server library wrapper for the Wayland libraries
# depends	: qt5 wayland extra-cmake-modules

name=kwayland
version=5.57.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_INSTALL_LIBEXECDIR=lib    \
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(eb7a86ca138a5c68ff59de90695330d2)
