# description	: KHTML APIs
# depends	: giflib kparts kjs extra-cmake-modules python3 gperf

name=khtml
version=5.46.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/portingAids/$name-$version.tar.xz)

build() {
	cd $name-$version

	export CXXFLAGS="${CXXFLAGS} -isystem /usr/include/openssl-1.0"

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(545a88b8fc4099cdcddd012327c73c59)
