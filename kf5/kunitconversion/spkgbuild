# description	: Support for unit conversion
# depends	: ki18n
# makedepends	: extra-cmake-modules python3 qt5

name=kunitconversion
version=5.43.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	export CXXFLAGS="${CXXFLAGS} -isystem /usr/include/openssl-1.0"

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(5146a71a41c76385cf34544c67005d84)
