# description	: Widgets for KConfig
# depends	: kauth kcodecs kconfig kguiaddons ki18n kwidgetsaddons extra-cmake-modules kdoctools python3 mesa qt5

name=kconfigwidgets
version=5.53.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	export CXXFLAGS="${CXXFLAGS} -isystem /usr/include/openssl-1.0"

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(295ec19de064d7ce1e0d5a89b8a21fbb)
