# description	: Monitoring user activity
# depends	: qt5 extra-cmake-modules mesa

name=kidletime
version=5.48.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	export CXXFLAGS="${CXXFLAGS} -isystem /usr/include/openssl-1.0"

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(c32aa7c38f7d278f522d85d5b9987092)
