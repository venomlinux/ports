# description	: KWallet PAM integration
# depends	: libgcrypt linux-pam extra-cmake-modules qt5

name=kwallet-pam
version=5.14.4
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
		 -DCMAKE_BUILD_TYPE=Release	\
		 -DBUILD_TESTING=OFF		\
		 -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(d548ae1d4b1850cc65093128a411304a)
