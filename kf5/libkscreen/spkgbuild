# description	: KDE screen management software
# depends	: kwayland libxrandr qt5 extra-cmake-modules

name=libkscreen
version=5.13.4
release=1
source=(http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
		 -DCMAKE_BUILD_TYPE=Release	\
		 -DBUILD_TESTING=OFF		\
		 -Wno-dev ..
	make
	make DESTDIR=$PKG install
}

md5sum=(dfe4e097033f48d5f3b56d7d9fe91c91)
