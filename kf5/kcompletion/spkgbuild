# description	: Text completion helpers and widgets
# depends	: kwidgetsaddons kconfig extra-cmake-modules qt5

name=kcompletion
version=5.59.0
release=1
source=(https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/locale
}

md5sum=(d2da32cde127ed7916dff9901d03af53)
