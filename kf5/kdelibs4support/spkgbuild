# description	: Porting aid from KDELibs4
# depends	: kunitconversion kitemmodels kemoticons kded kparts
# makedepends	: extra-cmake-modules kdoctools qt5 networkmanager perl-uri python3 kdesignerplugin

name=kdelibs4support
version=5.37.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/portingAids/$name-$version.tar.xz)

build() {
	cd $name-$version

	sed -i.orig \
             '/OPENSSL_FOUND/i set(OPENSSL_INCLUDE_DIR "/usr/include/openssl-1.0")' \
             src/CMakeLists.txt

	export CXXFLAGS="${CXXFLAGS} -isystem /usr/include/openssl-1.0"

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}
