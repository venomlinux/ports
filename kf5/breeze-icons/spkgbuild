# description	: Breeze icon themes
# makedepends	: extra-cmake-modules qt5

name=breeze-icons
version=5.43.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
	      -DBUILD_TESTING=OFF         \
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}
